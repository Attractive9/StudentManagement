<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_info_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/title_font_size"
        app:layout_constraintBottom_toTopOf="@id/guideInfoTop"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideInfoLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideInfoTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideInfoBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <TextView
        android:id="@+id/txtGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_grade"
        app:layout_constraintBottom_toTopOf="@id/txtClass"
        app:layout_constraintLeft_toRightOf="@id/guideInfoLeft"
        app:layout_constraintTop_toBottomOf="@id/guideInfoTop" />

    <TextView
        android:id="@+id/txtClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_class"
        app:layout_constraintBottom_toTopOf="@id/txtNum"
        app:layout_constraintLeft_toLeftOf="@id/txtGrade"
        app:layout_constraintTop_toBottomOf="@id/txtGrade" />

    <TextView
        android:id="@+id/txtNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_num"
        app:layout_constraintBottom_toTopOf="@id/txtName"
        app:layout_constraintLeft_toLeftOf="@id/txtGrade"
        app:layout_constraintTop_toBottomOf="@id/txtClass" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_name"
        app:layout_constraintBottom_toBottomOf="@id/guideInfoBottom"
        app:layout_constraintLeft_toLeftOf="@id/txtGrade"
        app:layout_constraintTop_toBottomOf="@id/txtNum" />

    <EditText
        android:id="@+id/editGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_lr"
        android:hint="@string/txt_hint"
        app:layout_constraintBottom_toBottomOf="@id/txtGrade"
        app:layout_constraintLeft_toRightOf="@id/txtGrade"
        app:layout_constraintTop_toTopOf="@id/txtGrade" />

    <EditText
        android:id="@+id/editClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/txt_hint"
        app:layout_constraintBottom_toBottomOf="@id/txtClass"
        app:layout_constraintLeft_toLeftOf="@id/editGrade"
        app:layout_constraintTop_toTopOf="@id/txtClass" />

    <EditText
        android:id="@+id/editNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/txt_hint"
        app:layout_constraintBottom_toBottomOf="@id/txtNum"
        app:layout_constraintLeft_toLeftOf="@id/editGrade"
        app:layout_constraintTop_toTopOf="@id/txtNum" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/txt_hint"
        app:layout_constraintBottom_toBottomOf="@id/txtName"
        app:layout_constraintLeft_toLeftOf="@id/editGrade"
        app:layout_constraintTop_toTopOf="@id/txtName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_margin_lr"
        android:text="@string/txt_admin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideInfoBottom" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_submit"
        app:layout_constraintRight_toRightOf="@id/btnAdmin"
        app:layout_constraintTop_toBottomOf="@id/btnAdmin" />

</androidx.constraintlayout.widget.ConstraintLayout>